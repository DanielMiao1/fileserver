{
	"extends": "stylelint-config-standard-scss",
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"order/order": [
			"custom-properties",
			"dollar-variables",
			"declarations",
			"at-rules",
			"rules"
		],
		"order/properties-alphabetical-order": true,
		"rule-empty-line-before": ["always", {
			"ignore": [
				"inside-block"
			]
		}]
	}
}